<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_client_title_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        tools:text="Dado:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/customer_data_label"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_client_subtitle_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/customer_data_text"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_client_title_card"
        app:layout_constraintStart_toEndOf="@+id/tv_client_title_card"
        app:layout_constraintTop_toTopOf="@+id/tv_client_title_card"
        tools:text="DROGARIA CAMPESTRE" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_detail_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginHorizontal="4dp"
        android:scaleType="centerInside"
        android:visibility="gone"
        app:layout_goneMarginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_client_subtitle_card"
        app:layout_constraintStart_toEndOf="@+id/tv_client_subtitle_card"
        app:layout_constraintTop_toTopOf="@+id/tv_client_subtitle_card"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/ic_maxima_telefone" />

</androidx.constraintlayout.widget.ConstraintLayout>